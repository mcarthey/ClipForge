@page "/templates/new"
@page "/templates/edit/{Id:int}"
@rendermode InteractiveServer
@inject HttpClient Http
@inject NavigationManager Navigation
@attribute [Microsoft.AspNetCore.Authorization.Authorize]

<PageTitle>@(Id.HasValue ? "Edit Template" : "New Template") - ClipForge</PageTitle>

<h3>@(Id.HasValue ? "Edit Template" : "New Template")</h3>

@if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card mb-4">
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Template Name</label>
                    <input type="text" class="form-control" @bind="name" placeholder="e.g., YouTube Shorts Template" />
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Platform</label>
                        <select class="form-select" @bind="platform">
                            <option value="">Generic</option>
                            <option value="YouTube">YouTube Shorts (9:16)</option>
                            <option value="YouTube Standard">YouTube Standard (16:9)</option>
                            <option value="TikTok">TikTok (9:16)</option>
                            <option value="Instagram">Instagram Reels (9:16)</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">&nbsp;</label>
                        <div class="form-check mt-2">
                            <input class="form-check-input" type="checkbox" @bind="isDefault" id="isDefault" />
                            <label class="form-check-label" for="isDefault">Set as default for this platform</label>
                        </div>
                    </div>
                </div>

                <h5>Timeline Segments</h5>
                <div class="mb-3">
                    @for (var i = 0; i < segments.Count; i++)
                    {
                        var index = i;
                        <div class="card mb-2">
                            <div class="card-body py-2">
                                <div class="d-flex justify-content-between align-items-start">
                                    <div class="flex-grow-1 me-2">
                                        <div class="row g-2 mb-2">
                                            <div class="col-md-3">
                                                <select class="form-select form-select-sm" @bind="segments[index].Type">
                                                    <option value="asset">Asset</option>
                                                    <option value="textSlide">Text Slide</option>
                                                    <option value="content-placeholder">Content Placeholder</option>
                                                </select>
                                            </div>
                                            @if (segments[index].Type == "textSlide")
                                            {
                                                <div class="col-md-5">
                                                    <input type="text" class="form-control form-control-sm"
                                                           @bind="segments[index].Text" placeholder="Slide text..." />
                                                </div>
                                                <div class="col-md-2">
                                                    <input type="number" class="form-control form-control-sm"
                                                           @bind="segments[index].Duration" placeholder="Sec" min="1" />
                                                </div>
                                            }
                                            else if (segments[index].Type == "content-placeholder")
                                            {
                                                <div class="col-md-7">
                                                    <span class="form-text">Will be replaced with content video during batch processing</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="col-md-5">
                                                    <input type="text" class="form-control form-control-sm"
                                                           @bind="segments[index].OverlayText" placeholder="Overlay text (optional)" />
                                                </div>
                                                <div class="col-md-2">
                                                    <select class="form-select form-select-sm"
                                                            @bind="segments[index].OverlayPosition">
                                                        <option value="">No overlay</option>
                                                        <option value="top-center">Top</option>
                                                        <option value="center">Center</option>
                                                        <option value="bottom-center">Bottom</option>
                                                    </select>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => MoveUp(index)" disabled="@(index == 0)">Up</button>
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => MoveDown(index)" disabled="@(index == segments.Count - 1)">Down</button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="() => RemoveSegment(index)">X</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="btn-group mb-3">
                    <button class="btn btn-outline-primary btn-sm" @onclick="AddAssetSegment">+ Asset</button>
                    <button class="btn btn-outline-primary btn-sm" @onclick="AddTextSlide">+ Text Slide</button>
                    <button class="btn btn-outline-primary btn-sm" @onclick="AddContentPlaceholder">+ Content Placeholder</button>
                </div>

                <hr />
                <button class="btn btn-success" @onclick="SaveTemplate" disabled="@isSaving">
                    @(isSaving ? "Saving..." : (Id.HasValue ? "Update Template" : "Create Template"))
                </button>
                <a href="templates" class="btn btn-outline-secondary ms-2">Cancel</a>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int? Id { get; set; }

    private string name = "";
    private string platform = "";
    private bool isDefault;
    private List<SegmentModel> segments = new();
    private string? errorMessage;
    private bool isSaving;

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
            try
            {
                var template = await Http.GetFromJsonAsync<TemplateDto>($"/api/templates/{Id}");
                if (template != null)
                {
                    name = template.Name;
                    platform = template.Platform ?? "";
                    isDefault = template.IsDefault;
                    segments = template.Timeline.Segments.Select(s => new SegmentModel
                    {
                        Type = s.Type,
                        Text = s.Text,
                        OverlayText = s.OverlayText,
                        OverlayPosition = s.OverlayPosition ?? "",
                        Duration = s.Duration,
                        AssetId = s.AssetId
                    }).ToList();
                }
            }
            catch
            {
                errorMessage = "Failed to load template.";
            }
        }
    }

    private void AddAssetSegment() => segments.Add(new SegmentModel { Type = "asset" });
    private void AddTextSlide() => segments.Add(new SegmentModel { Type = "textSlide", Duration = 3 });
    private void AddContentPlaceholder() => segments.Add(new SegmentModel { Type = "content-placeholder" });
    private void RemoveSegment(int index) => segments.RemoveAt(index);

    private void MoveUp(int index)
    {
        if (index > 0)
            (segments[index], segments[index - 1]) = (segments[index - 1], segments[index]);
    }

    private void MoveDown(int index)
    {
        if (index < segments.Count - 1)
            (segments[index], segments[index + 1]) = (segments[index + 1], segments[index]);
    }

    private async Task SaveTemplate()
    {
        if (string.IsNullOrWhiteSpace(name))
        {
            errorMessage = "Template name is required.";
            return;
        }

        isSaving = true;
        errorMessage = null;

        var timeline = new TimelineDefinition
        {
            Segments = segments.Select((s, i) => new TimelineSegment
            {
                Id = Guid.NewGuid().ToString(),
                Type = s.Type,
                Text = s.Text,
                OverlayText = s.OverlayText,
                OverlayPosition = string.IsNullOrEmpty(s.OverlayPosition) ? null : s.OverlayPosition,
                Duration = s.Duration,
                AssetId = s.AssetId,
                Order = i
            }).ToList()
        };

        try
        {
            if (Id.HasValue)
            {
                var response = await Http.PutAsJsonAsync($"/api/templates/{Id}", new UpdateTemplateDto
                {
                    Name = name,
                    Platform = string.IsNullOrEmpty(platform) ? null : platform,
                    Timeline = timeline,
                    IsDefault = isDefault
                });

                if (response.IsSuccessStatusCode)
                    Navigation.NavigateTo("/templates");
                else
                    errorMessage = "Failed to update template.";
            }
            else
            {
                var response = await Http.PostAsJsonAsync("/api/templates", new CreateTemplateDto
                {
                    Name = name,
                    Platform = string.IsNullOrEmpty(platform) ? null : platform,
                    Timeline = timeline,
                    IsDefault = isDefault
                });

                if (response.IsSuccessStatusCode)
                    Navigation.NavigateTo("/templates");
                else
                    errorMessage = "Failed to create template.";
            }
        }
        catch
        {
            errorMessage = "An error occurred while saving.";
        }
        finally
        {
            isSaving = false;
        }
    }

    private class SegmentModel
    {
        public string Type { get; set; } = "asset";
        public string? Text { get; set; }
        public string? OverlayText { get; set; }
        public string OverlayPosition { get; set; } = "";
        public double? Duration { get; set; }
        public int? AssetId { get; set; }
    }
}
