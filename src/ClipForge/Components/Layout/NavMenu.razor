                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="templates">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Templates
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="projects">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Projects
                    </NavLink>
                </div>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="jobs">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Jobs
                    </NavLink>
                </div>
            </Authorized>
        </AuthorizeView>
